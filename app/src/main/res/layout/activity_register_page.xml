<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk"
    android:focusableInTouchMode="true"
    tools:context=".RegisterPageActivity"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:padding="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.018"
                tools:layout_editor_absoluteX="0dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <EditText
                    android:id="@+id/editTextUserNameRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/tintColorUnderLine"
                    android:ems="10"
                    android:hint="@string/login_et_username"
                    android:inputType="textPersonName"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/ditTextNickNameRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/tintColorUnderLine"
                    android:ems="10"
                    android:hint="@string/nick_name_register"
                    android:inputType="textPersonName"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/tintColorUnderLine"
                    android:ems="10"
                    android:hint="@string/login_et_password"
                    android:inputType="textPassword"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/editTextTextPassword2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/tintColorUnderLine"
                    android:ems="10"
                    android:hint="@string/login_et_password"
                    android:inputType="textPassword"
                    android:textSize="23dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_upload_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/tintColorUnderLine"
                    android:theme="@style/loginButton"
                    android:text="@string/upload_photo_register" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="845dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="25dp"
                    android:text="Already registered? click here"
                    android:textSize="22dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/register_btn"
                    style="@style/loginButton"
                    android:background="@drawable/login_button_bk"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/register_button"
                    android:textSize="15sp"
                    android:theme="@style/loginButton"/>

            </LinearLayout>
    </ScrollView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
